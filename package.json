{
  "name": "cms-adapter-generator",
  "version": "1.0.0",
  "description": "get the json schema from a rest endpoint",
  "main": "index.js",
  "author": "LIT frontend",
  "license": "MIT",
  "scripts": {
    "generate:schema": "ts-node generate-schema.ts",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build --no-prerender",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch",
    "test": "vitest run",
    "test:verbose": "vitest run --reporter verbose",
    "test:watch": "vitest --reporter verbose"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/user-event": "^14.4.3",
    "@types/json-schema": "^7.0.11",
    "@types/json-schema-generator": "^2.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "husky": "^8.0.0",
    "json-schema-generator": "^2.0.6",
    "preact-cli": "^3.4.5",
    "preact-render-to-string": "^6.0.2",
    "prettier": "^2.8.7",
    "string-replace-loader": "^3.1.0",
    "tailwindcss": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "@carbon/icons-react": "^11.18.0",
    "@carbon/type": "^11.17.0",
    "axios": "^1.3.4",
    "code-block-writer": "^12.0.0",
    "postcss": "^8.4.21",
    "preact": "^10.13.2",
    "react-docgen": "6.0.0-beta.6",
    "react-dropzone": "^14.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
